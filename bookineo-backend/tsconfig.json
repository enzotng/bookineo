{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                  
    "moduleResolution": "NodeNext",      
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,             
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
